{
	"presets": [
		[
			"@babel/preset-env",
			{
				"targets": {
					"esmodules": true
				}
			}
		],
		"@babel/preset-typescript",
		[
			"@babel/preset-react",
			{
				"runtime": "automatic"
			}
		]
	],
	"plugins": [
		"@babel/plugin-transform-runtime",
		[
			"babel-plugin-styled-components",
			{
				"ssr": true,
				"pure": true
			}
		]
	]
}
